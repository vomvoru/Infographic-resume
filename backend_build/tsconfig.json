{
  "compilerOptions": {
    "outDir": "./dist/",
    "inlineSourceMap": true,
    "strict": true,
    "declaration": true,
    "inlineSources": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2016"
  },
  "include": [
    "./src/**/*"
  ]
}
